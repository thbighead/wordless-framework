{
  "name": "infobaseit/wordless-framework",
  "description": "Wordless Framework Infobase Version.",
  "license": "proprietary",
  "autoload": {
    "psr-4": {
      "Wordless\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Wordless\\Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "PHP Team",
      "email": "php-team@infobase.com.br"
    }
  ],
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "composer/installers": true,
      "roots/wordpress-core-installer": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^8.2",
    "ext-apcu": "*",
    "ext-bcmath": "*",
    "ext-ctype": "*",
    "ext-curl": "*",
    "ext-dom": "*",
    "ext-exif": "*",
    "ext-fileinfo": "*",
    "ext-filter": "*",
    "ext-iconv": "*",
    "ext-intl": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-memcached": "*",
    "ext-mysqli": "*",
    "ext-openssl": "*",
    "ext-pcntl": "*",
    "ext-pcre": "*",
    "ext-session": "*",
    "ext-shmop": "*",
    "ext-simplexml": "*",
    "ext-sodium": "*",
    "ext-tokenizer": "*",
    "ext-xml": "*",
    "ext-xmlreader": "*",
    "doctrine/inflector": "^2.0",
    "fakerphp/faker": "^1.23",
    "fruitcake/php-cors": "^1.3",
    "lcobucci/jwt": "^5.2",
    "league/csv": "^9.16",
    "monolog/monolog": "^3.5",
    "nesbot/carbon": "^3.9",
    "paragonie/csp-builder": "^3.0",
    "ramsey/uuid": "^4.7",
    "roots/wordpress": "^6",
    "symfony/console": "^7.2",
    "symfony/dotenv": "^7.2",
    "symfony/http-client": "^7.2",
    "symfony/http-foundation": "^7.2",
    "symfony/validator": "^7.2",
    "wp-cli/doctor-command": "^2.1",
    "wp-cli/profile-command": "^2.1",
    "wp-cli/wp-cli": "^2.12",
    "wp-cli/wp-cli-bundle": "^2.11"
  },
  "require-dev": {
    "matthiasmullie/minify": "^1.3",
    "phpunit/phpunit": "^11.5",
    "psy/psysh": "^0.12",
    "symfony/var-dumper": "^7.2"
  },
  "scripts": {
    "post-autoload-dump": [
      "touch .env && mkdir -p cache && mkdir -p wp/wp-content/mu-plugins",
      "rm -f app config stubs && ln -s src/Application app  && ln -s assets/config config && ln -s assets/stubs stubs",
      "php console distribute"
    ]
  },
  "extra": {
    "wordpress-install-dir": "wp/wp-core"
  }
}
