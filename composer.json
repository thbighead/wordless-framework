{
  "name": "thbighead/wordless-framework",
  "description": "Wordless Framework.",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Wordless\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Wordless\\Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Thales Nathan",
      "email": "thcmatias@gmail.com"
    }
  ],
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "composer/installers": true,
      "roots/wordpress-core-installer": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "composer",
      "url": "https://packagist.org"
    }
  ],
  "require": {
    "php": "^8.2",
    "ext-apcu": "*",
    "ext-bcmath": "*",
    "ext-ctype": "*",
    "ext-curl": "*",
    "ext-dom": "*",
    "ext-exif": "*",
    "ext-fileinfo": "*",
    "ext-filter": "*",
    "ext-iconv": "*",
    "ext-intl": "*",
    "ext-json": "*",
    "ext-memcached": "*",
    "ext-mbstring": "*",
    "ext-mysqli": "*",
    "ext-openssl": "*",
    "ext-pcntl": "*",
    "ext-pcre": "*",
    "ext-session": "*",
    "ext-shmop": "*",
    "ext-simplexml": "*",
    "ext-sodium": "*",
    "ext-tokenizer": "*",
    "ext-xml": "*",
    "ext-xmlreader": "*",
    "doctrine/inflector": "^2.0",
    "fakerphp/faker": "~1.23.0",
    "fruitcake/php-cors": "^1.3",
    "lcobucci/jwt": "^5.2",
    "league/csv": "^9.16",
    "monolog/monolog": "^3.5",
    "nesbot/carbon": "^2.72",
    "paragonie/csp-builder": "^3.0",
    "ramsey/uuid": "^4.7",
    "roots/wordpress": "^6",
    "symfony/console": "^6.3",
    "symfony/dotenv": "^6.3",
    "symfony/http-client": "^6.3",
    "symfony/http-foundation": "^6.3",
    "symfony/validator": "^6.3",
    "wp-cli/doctor-command": "^2.1",
    "wp-cli/profile-command": "^2.1",
    "wp-cli/wp-cli": "^2.10",
    "wp-cli/wp-cli-bundle": "^2.10"
  },
  "require-dev": {
    "matthiasmullie/minify": "^1.3",
    "phpunit/phpunit": "~10.5.3",
    "psy/psysh": "^0.11.22",
    "symfony/var-dumper": "^6.3",
    "wpackagist-plugin/index-wp-mysql-for-speed": "^1.5"
  },
  "scripts": {
    "post-autoload-dump": [
      "touch .env && mkdir -p cache && mkdir -p wp/wp-content/mu-plugins",
      "rm -f app config stubs && ln -s src/Application app  && ln -s assets/config config && ln -s assets/stubs stubs",
      "php console distribute"
    ]
  },
  "extra": {
    "wordpress-install-dir": "wp/wp-core",
    "installer-paths": {
      "wp/wp-content/plugins/{$name}/": [
        "type:wordpress-plugin"
      ]
    }
  }
}
