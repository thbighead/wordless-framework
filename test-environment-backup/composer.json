{
  "name": "infobaseit/wordless",
  "description": "A headless WordPress CMS for developers sick of WordPress",
  "type": "project",
  "license": "proprietary",
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "authors": [
    {
      "name": "Thales Nathan",
      "email": "thales.matias@infobase.com.br"
    }
  ],
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "composer/installers": true
    }
  },
  "repositories": [
    {
      "type": "path",
      "url": "../",
      "options": {
        "symlink": false
      }
    },
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "composer",
      "url": "https://packagist.org"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^7.4",
    "composer/installers": "^2.1",
    "infobaseit/wordless-framework": "*"
  },
  "require-dev": {
    "psy/psysh": "^0.10.8",
    "symfony/var-dumper": "^5.3"
  },
  "scripts": {
    "post-autoload-dump": [
      "@php console mup:loader",
      "@php console publish:config"
    ],
    "post-package-install": [
      "Wordless\\Abstractions\\Composer::activatePlugin"
    ],
    "post-package-update": [
      "Wordless\\Abstractions\\Composer::activatePlugin"
    ],
    "pre-package-uninstall": [
      "Wordless\\Abstractions\\Composer::deactivatePlugin"
    ]
  },
  "extra": {
    "installer-paths": {
      "public_html/wp-cms/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
      "public_html/wp-cms/wp-content/themes/{$name}/": ["type:wordpress-theme"]
    }
  }
}
